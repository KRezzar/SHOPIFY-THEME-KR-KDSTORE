{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: 0px;
    padding-right: 0px;
   

  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
     
    }
  }
   
    .parallax {
    /* The image used */
    background-image: url(" {{ section.settings.image | image_url: width: 750 }}");

    /* Set a specific height */
    min-height: 330px; 
    height: 100%;
    /* Create the parallax scrolling effect */
    background-attachment: fixed;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    text-align: center; 
  
  
}

.kr-btn-para {
    color:black;
}
.sawtoothBorder-para { /*yellow bg container border sawtooth*/
 
  background:rgba(var(--kr-color-background-4),0.4) !important;
  min-height: 330px; 
  width:90%;
  margin-left:auto;
  margin-right:auto;
  }
{%- endstyle -%}


<div class="parallax">
<div class="">
{%- for block in section.blocks -%}
    {% case block.type %}
    {%- when 'heading' -%}
        <h2 class="kr_txt_blue_bg image-with-text__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
        {{ block.settings.heading | escape }}
        </h2>
    {%- when 'text' -%}
        <h2 class="kr_txt_blue_bg image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
    {{ block.settings.text }}  
        </h2>
    {%- when 'button' -%}
        {%- if block.settings.button_label != blank -%}
        <a
            {% if block.settings.button_link == blank %}
            role="link" aria-disabled="true"
            {% else %}
            href="{{ block.settings.button_link }}"
            {% endif %}
            class="kr-btn-para button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
            {{ block.shopify_attributes }}
        >
            {{ block.settings.button_label | escape }}
        </a>
        {%- endif -%}
    {%- endcase -%}
{%- endfor -%}


</div>
</div>
  
  
    
